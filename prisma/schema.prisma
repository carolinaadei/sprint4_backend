generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Place {
  id          Int  @id @default(autoincrement())
  description String
  acessLevel  Int
}

model User {
  id          Int  @id @default(autoincrement())
  name        String
  email       String @unique
  level       Int
  profile_img String
  badge       Badge?
}

model Badge {
  id         Int    @id @default(autoincrement())
  userId     Int    @unique
  badge_url  String
  user       User   @relation(fields: [userId], references: [id])
}